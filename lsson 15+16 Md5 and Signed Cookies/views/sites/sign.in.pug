extends ../layouts/common.pug
block content
   .d-flex.justify-content-center.mt-4
        form(action='/signin', method='post', style='width: 300px')
          .form-control.py-2
            .mb-2
                if errs 
                  each e in errs 
                    .alert.alert-danger=e 
            label(for='') Name:
            input.form-control.mb-2(type='text',name="name", placeholder='Name',value=values?value.name:'')
            label(for='') Phone:
            input.form-control.mb-2(type='text',name="phone", placeholder='phone',value=values?value.name:'')
            label(for='') Password:
            input.form-control.mb-2(type='password',name="password", placeholder='Password',value=values?value.password:'')
            input.btn.btn-primary.px-4.mt-2(type='submit')