extends ../layouts/common.pug
block content
    .d-flex.justify-content-center.mt-4
        form(action="/login" method='post', style='width: 300px')
          .form-control.py-2
            .mb-2
                if errs 
                  each e in errs 
                    .alert.alert-danger=e 
            label(for='') Name:
            input.form-control.mb-2(type='text',name="name", placeholder='Name',value=values?values.name:'')
            label(for='') Password:
            input.form-control.mb-2(type='password', name="password", placeholder='Password',value=values?values.password:'')
            input.btn.btn-primary.px-4.mt-2(type='submit')