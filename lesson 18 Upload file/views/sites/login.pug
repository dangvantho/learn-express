extends ../layouts/common.pug
block content
    .d-flex.justify-content-center
        form.form-control(action='/login', method='post', style='width:300px')
          if errs 
            each e in errs 
              .form-control.my-3.alert.alert-danger=e
          label(for='') Name:
          input.form-control.mb-3(type='text', name='name', value=values?values.name:'')
          label(for='') Password:
          input.form-control.mb-3(type='password', name='password', value=values?values.password:'')
          input.btn.btn-primary.form-control.mb-3(type='submit')