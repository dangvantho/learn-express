extends ../layouts/common.pug
block content
    .d-flex.justify-content-center
        form.form-control(method='post', style='width:300px' enctype="multipart/form-data")
          label(for='') Name:
          input.form-control.mb-3(type='text', name='name')
          label(for='') Phone:
          input.form-control.mb-3(type='text', name='phone')
          label(for='') Password:
          input.form-control.mb-3(type='password', name='password')
          label(for='') Avatar:
          input.form-control.mb-3(type='file', name='avatar')
          input.btn.btn-primary.form-control.mb-3(type='submit')