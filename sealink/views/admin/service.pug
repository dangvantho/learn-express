extends ../layouts/admin.pug
block content
  section.service
    a(href="/admin/service/post") Thêm dịch vụ 
    .container
     if services
       each service,key in services
         .row.my-3
           .col-12.col-sm-4.d-flex.justify-content-center
             - var data=''    
             each d in imgData[key]
              - data+=d.data.toString('base64')
             img(src="data:image/png;base64,"+data)
           .col-12.col-sm-8.d-flex.d-sm-block.justify-content-center.ps-sm-3.mt-3.mt-sm-0
             .d-block.bg-light.h-100.mt-0
               h4.text-warning=service.metadata.title
               ul(style='list-style: square;')
                 li=service.metadata.content
                 li 
                   a(href="/admin/service/"+service._id) Xóa